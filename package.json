{
    "name": "wdcc-website-v4",
    "version": "0.0.0-beta",
    "private": true,
    "scripts": {
        "dev": "next dev --turbo",
        "build": "next build",
        "build:analyze": "cross-env ANALYZE=true next build",
        "start": "next start",
        "deploy:staging": "fly deploy --config fly.staging.toml",
        "lint": "next lint --fix",
        "lint:no-cache": "next lint --no-cache",
        "format": "prettier . --write",
        "l": "pnpm run format && pnpm run lint",
        "lint:ci": "prettier . --check && next lint",
        "i:ci": "pnpm install --frozen-lockfile",
        "list": "pnpm list --depth 0",
        "clear:next": "rimraf .next",
        "clear:modules": "rimraf node_modules",
        "nuke": "rimraf .next && rimraf node_modules",
        "typegen": "payload generate:types"
    },
    "dependencies": {
        "@next/bundle-analyzer": "^15.1.0",
        "@payloadcms/db-postgres": "3.41.0",
        "@payloadcms/next": "3.41.0",
        "@payloadcms/richtext-lexical": "3.41.0",
        "@payloadcms/storage-s3": "3.41.0",
        "@react-three/drei": "^10.1.2",
        "@react-three/fiber": "9.1.2",
        "@rive-app/react-canvas": "^4.17.8",
        "clsx": "^2.1.1",
        "cross-spawn": ">=7.0.5",
        "glslify-loader": "^2.0.0",
        "graphql": "^16.10.0",
        "motion": "^12.5.0",
        "next": "15.3.3",
        "payload": "3.41.0",
        "raw-loader": "^4.0.2",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "sharp": "^0.34.2",
        "tailwind-merge": "^2.5.5",
        "tailwind-variants": "^0.3.0",
        "three": "0.171.0",
        "tunnel-rat": "^0.1.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@eslint/js": "^9.28.0",
        "@flydotio/dockerfile": "^0.5.9",
        "@tailwindcss/postcss": "^4.0.9",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22.10.1",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@types/three": "0.170.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.28.0",
        "eslint-config-next": "15.3.3",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-unused-imports": "^4.1.4",
        "lil-gui": "^0.20.0",
        "nanoid": ">=3.3.8",
        "postcss": "^8.4.49",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "rimraf": "^6.0.1",
        "tailwindcss": "^4.0.9",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.1"
    },
    "volta": {
        "node": "20.18.1",
        "pnpm": "10.6.1"
    },
    "dockerfile": {
        "secrets": [
            "DATABASE_URI",
            "PAYLOAD_SECRET",
            "S3_BUCKET",
            "S3_ACCESS_KEY_ID",
            "S3_SECRET_ACCESS_KEY",
            "S3_REGION"
        ]
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "sharp"
        ]
    }
}
