{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@main/*": ["./src/app/(main)/*"],
            "@misc/*": ["./src/app/(main)/(misc)/*"],
            "@public/*": ["./public/*"],
            "@payload-config": ["./payload.config.ts"]
        },
        "target": "ES2017"
    },
    "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js", "eslint.config.mjs"],
    "exclude": ["node_modules"]
}
